{
  "name": "linkxtr/laravel-qrcode",
  "description": "A clean, modern, and easy-to-use QR code generator for Laravel",
  "keywords": [
    "laravel",
    "qrcode",
    "bacon",
    "qr",
    "generator"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Khaled Sadek",
      "email": "khaledsadek286@gmail.com",
      "homepage": "https://github.com/khaledsadek"
    }
  ],
  "require": {
    "php": "^8.2",
    "bacon/bacon-qr-code": "^3.0",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0"
  },
  "suggest": {
    "ext-gd": "Required to generate PNG and WebP images via GD",
    "ext-imagick": "Required to generate PNG and WebP images via Imagick"
  },
  "require-dev": {
    "chillerlan/php-qrcode": "^5.0",
    "laravel/pint": "^1.0",
    "orchestra/testbench": "^9.0|^10.0",
    "pestphp/pest": "^2.0|^3.0|^4.0",
    "pestphp/pest-plugin-laravel": "^2.0|^3.0|^4.0",
    "pestphp/pest-plugin-type-coverage": "^2.0|^3.0",
    "phpstan/phpstan": "^2.0",
    "rector/rector": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Linkxtr\\QrCode\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "refactor": "rector",
    "lint": "pint --parallel",
    "test:refactor": "rector --dry-run",
    "test:lint": "pint --parallel --test",
    "test:types": "phpstan analyse --ansi",
    "test:type-coverage": "pest --type-coverage --compact --coverage --min=100",
    "test:unit": "pest --parallel --colors=always --coverage --min=100",
    "test": [
      "@test:refactor",
      "@test:lint",
      "@test:types",
      "@test:type-coverage",
      "@test:unit"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Linkxtr\\QrCode\\QrCodeServiceProvider"
      ],
      "aliases": {
        "QrCode": "Linkxtr\\QrCode\\Facades\\QrCode"
      }
    },
    "branch-alias": {
      "dev-main": "2.x-dev"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
