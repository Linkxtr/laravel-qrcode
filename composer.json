{
    "name": "linkxtr/laravel-qrcode",
    "description": "A clean, modern, and easy-to-use QR code generator for Laravel",
    "keywords": ["laravel", "qrcode", "bacon", "qr", "generator"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Khaled Sadek",
            "email": "khaledsadek286@gmail.com",
            "homepage": "https://github.com/khaledsadek"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "bacon/bacon-qr-code": "^3.0",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0|^8.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Linkxtr\\QrCode\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "lint": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Linkxtr\\QrCode\\QrCodeServiceProvider"
            ],
            "aliases": {
                "QrCode": "Linkxtr\\QrCode\\Facades\\QrCode"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
